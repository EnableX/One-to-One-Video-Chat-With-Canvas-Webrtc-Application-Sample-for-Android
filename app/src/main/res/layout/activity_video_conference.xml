<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.VideoConferenceActivity">

    <FrameLayout
        android:id="@+id/canvas_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="#000000" />

    <FrameLayout
        android:id="@+id/participant"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/canvas_share"
        android:background="#000000" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll">

        <FrameLayout
            android:id="@+id/moderator"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/frame_border"
            android:padding="10dp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/disconnect"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/ll"
        android:layout_centerHorizontal="true"
        android:src="@drawable/disconnect" />

    <FrameLayout
        android:id="@+id/active_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/ll"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/frame_border"
        android:padding="10dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/items_background"
        android:padding="5dp">

        <ImageView
            android:id="@+id/mute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/mute" />

        <ImageView
            android:id="@+id/video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_videocam" />

        <ImageView
            android:id="@+id/camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/front_camera" />

        <ImageView
            android:id="@+id/volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/volume_on" />
    </LinearLayout>

    <TextView
        android:id="@+id/canvas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="#F44336"
        android:padding="8dp"
        android:text="Start Canvas"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/change_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/canvas"
        android:background="#F44336"
        android:padding="8dp"
        android:text="Change Color"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/canvas_view"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_below="@+id/canvas"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:padding="10dp"
        android:text="Change Color"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:text="White Color"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:visibility="visible" />
    </RelativeLayout>

</RelativeLayout>